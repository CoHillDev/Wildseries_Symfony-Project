{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>All the wild categories : </h1>
    {% for category in categories %}
        <div>
      <h2><a href="{{ path('category_show', { 'categoryName': category.name }) }}"> ☞ {{ category.name }}</a></h2>
        </div>
    {% else %}
        No categories found
    {% endfor %}

    <a href="{{ path('app_index') }}">🏠 Back to Home</a>
{% endblock %}